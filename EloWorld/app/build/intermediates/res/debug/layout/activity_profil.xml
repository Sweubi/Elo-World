        android:layout_height="70dp"/>
</LinearLayout>
        <ListView
            android:layout_margin="10dp"
            android:id="@+id/list_matches"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@null" />
</LinearLayout>
