<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.esgi.groupe1.eloworld.activity.FriendActivity">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_margin="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/squareFriend"
                android:layout_width="@dimen/profilDimen"
                android:layout_height="@dimen/profilDimen" />
            <LinearLayout
                android:layout_marginLeft="8dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/friendName"
                    android:textSize="@dimen/text_size"
                    android:textStyle="bold"
                    android:textColor="@color/blue2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <Button
                    android:id="@+id/btfollow"
                    android:text="@string/follow"
                    android:padding="5dp"
                    android:background="@drawable/bt_follow"
                    android:textColor="@color/text_color_white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>


    </LinearLayout>

    <ListView
        android:dividerHeight="@dimen/spaceBetwenItem"
        android:id="@+id/gamesFriend"
        android:paddingLeft="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_vertical_margin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


</LinearLayout>
